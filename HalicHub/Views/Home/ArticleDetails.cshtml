@model ArticleDetailsModel
@await Html.PartialAsync("_Header")
<section class="blog_area p_120 single-post-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="main_blog_details">
                    <img class="img-fluid" src="@Model.Articles.img" alt="">
                    <a href="#"><h4>@Model.Articles.Title</h4></a>
                    <div class="user_details">
                        <div class="float-right">
                            <div class="media">
                                <div class="media-body">
                                    @foreach (var item in Model.Authors)
                                    {
                                        <h5>@item.NameSurname</h5>
                                    }
                                    <p>@Model.Articles.Date</p>
                                </div>
                                <div class="d-flex">
                                    <img src="img/blog2/user-img.jpg" alt="">
                                </div>
                            </div>
                        </div>
                    </div>
                    <p>@Model.Articles.Content</p>
                    <div class="news_d_footer">
                        <div class="news_socail ml-auto">
                            <a href="#"><i class="fa fa-facebook"></i></a>
                            <a href="#"><i class="fa fa-twitter"></i></a>
                            <a href="#"><i class="fa fa-youtube-play"></i></a>
                            <a href="#"><i class="fa fa-pinterest"></i></a>
                            <a href="#"><i class="fa fa-rss"></i></a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="blog_right_sidebar">
                    @foreach (var item in Model.Authors)
                    {
                        <aside class="single_sidebar_widget author_widget">
                            <img class="author_img rounded-circle" src="@item.Image" alt="">
                            <h4><a asp-controller="Home" asp-action="AuthorDetails" asp-route-author="@item.Url">@item.NameSurname</a></h4>
                            <div class="social_icon">
                                <a href="#"><i class="fa fa-facebook"></i></a>
                                <a href="#"><i class="fa fa-twitter"></i></a>
                                <a href="#"><i class="fa fa-github"></i></a>
                                <a href="#"><i class="fa fa-behance"></i></a>
                            </div>
                            <p>@item.Description</p>
                            <div class="br"></div>
                        </aside>

                    }

                </div>
            </div>
        </div>
    </div>
</section>
@await Html.PartialAsync("_Footer")